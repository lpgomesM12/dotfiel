<section class="content-header">
      <!--Mensagens aqui-->
    <%if notice%>
      <div class="alert alert-success" role="alert"><%= notice %></div>
     <%end%>
</section>

<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Prêmio</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">

<p>
  <strong>Nome premio:</strong>
  <%= @premio.nome_premio %>
</p>

<p>
  <strong>Pontos para resgate:</strong>
  <%= @premio.numr_ponto %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @premio.desc_premio %>
</p>

</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
<%= link_to edit_premio_path(@premio), :class => "btn btn-default btn-sm" do %>
<span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to premios_path, :class => "btn btn-default btn-sm" do %>
<span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>

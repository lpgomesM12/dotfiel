<section class="content-header">
    <h6>
      <!--Mensagens aqui-->
    <p id="notice"><%= notice %></p>
    </h6>
  </section>

   <!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
   <div class="box box-primary">
      <div class="box-header with-border">
         <h3 class="box-title">Bairro</h3>
       </div><!-- /.box-header -->
 <form role="form">
  <div class="box-body">

<p>
  <strong>Nome empresa:</strong>
  <%= @empresa.nome_empresa %>
</p>

<p>
  <strong>Cnpj:</strong>
  <%= @empresa.cnpj %>
</p>

<p>
  <strong>Nome responsavel:</strong>
  <%= @empresa.nome_responsavel %>
</p>

<p>
  <strong>Desc telefone:</strong>
  <%= @empresa.desc_telefone %>
</p>

<p>
  <strong>Endereco:</strong>
